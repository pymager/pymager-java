<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>pymager-java-client-parent</artifactId>
		<groupId>com.sirika.pymager</groupId>
		<version>0.3-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.sirika.pymager</groupId>
	<artifactId>pymager-java-client-assembly</artifactId>
	<packaging>pom</packaging>
	<name>PyMager Server Java Client Assembly</name>
	<version>0.3-SNAPSHOT</version>
	<dependencies>
		<dependency>
			<groupId>com.sirika.pymager</groupId>
			<artifactId>pymager-java-client</artifactId>
			<version>0.3-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/all.xml</descriptor>
					</descriptors>
					<finalName>pymager-java-client-${version}</finalName>
					<outputDirectory>target/assembly/out</outputDirectory>
					<workDirectory>target/assembly/work</workDirectory>
					<goals>install deploy</goals>
				</configuration>
			</plugin>
		</plugins>

	</build>
</project>
